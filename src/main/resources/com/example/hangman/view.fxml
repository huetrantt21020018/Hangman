<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.hangman.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="gameState"/>
    <Label fx:id="guessedWord"/>
    <Label fx:id="badGuessed"/>
    <Label fx:id="invalidInput"/>

    <TextField fx:id="inputText"/>

    <Button fx:id="button" text="Guess" onAction="#onclick"/>

</VBox>